@model RoleEdit
@{
    ViewData["Title"] = "Update Role";
}


<div class="row">
    <div class="col-1">
        <a class="nav-link text-dark" asp-action="Index">
            <img src="~/img/backbutton2.png" class="img-fluid rounded-corners" style="height:30px">
        </a>
    </div>
</div>

<h3 style="text-align: center;">@ViewData["Title"]</h3>
<p class="subtext" style="text-align: center;">Select the user you want to add or remove from admin.</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <h3>Add To @Model.Role.Name</h3>
    <table class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            @foreach (IdentityUser user in Model.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="AddIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>

    <h3>Remove From @Model.Role.Name</h3>
    <table class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">No Users Are Members</td></tr>
        }
        else
        {
            @foreach (IdentityUser user in Model.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <div class="text-center">
        <button type="submit" class="blue-pill-button">Save</button>
    </div>
    
</form>