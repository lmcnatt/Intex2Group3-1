@model Product

<div class="card m-1 p-1">
    <h4>
        @Model.Name
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.Price.ToString("c")</small></span>
    </h4>
    <ul>
        <li>
            Categories:
            @foreach (ProductCategory c in Model.ProductCategories)
            {
                @c.Category.CategoryName @: -
            }
        </li>
        <li>Product Name: @Model.Name</li>
    </ul>

    <form id="@Model.ProductId" method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.ProductId">
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-success btn-sm float-end" onclick="addToCart(event)">Add to Cart</button>
    </form>

</div>

<script>
    function addToCart(event) {
        event.preventDefault(); // Prevent the form from submitting normally

        var productId = event.target.id;
        var formData = new FormData(event.target);

        // Make an AJAX request to add the product to the cart
        fetch('/Cart/AddToCart', {
            method: 'POST',
            body: formData
        })
            .then(response => response.json())
            .then(data => {
                // Update the cart count on the page
                document.getElementById('cart-count').innerText = data.cartCount;
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }
</script>
