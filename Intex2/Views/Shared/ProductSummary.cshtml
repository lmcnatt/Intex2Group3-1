@model Product

<div class="card m-1 p-1">
    <h4>
        @Model.Name
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.Price.ToString("c")</small></span>
    </h4>
    <ul>
        <li>
            Categories:
            @foreach (ProductCategory c in Model.ProductCategories)
            {
                @c.Category.CategoryName @: -
            }
        </li>
        <li>Product Name: @Model.Name</li>
    </ul>

    @* <a href="/ProductDetails?productId=@Model.ProductId" class="btn">Product Details</a> *@
    <a asp-controller="Home" asp-action="ProductDetails" asp-route-productId="@Model.ProductId"><u>Product Details</u></a>

    <form asp-page="/Cart" id="@Model.ProductId" method="post">
        <input type="hidden" asp-for="@Model.ProductId">
        <input type="hidden" name="category" value="@ViewContext.HttpContext.Request.Query["category"]" />
        <input type="hidden" name="pageNum" value="@ViewContext.HttpContext.Request.Query["pageNum"]" />
        @* <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" /> *@
        <button type="submit" class="btn btn-success btn-sm float-end">Add to Cart</button>
    </form>

</div>
