@model Product


<div class="card" style="margin-bottom:20px">
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <img src="@Model.ImgLink" class="img-thumbnail rounded float-left mx-auto my-auto d-block" />
            </div>
            <div class="col-8">
                <div class="row">
                    <div class="col-md-10">
                        <h3><b>@Model.Name</b> | @Model.Category.CategoryName</h3> 
                    </div>
                    <div class="col-md-2 float-end">
                        <h3>$@Model.Price</h3>
                    </div>
                    
                </div>
                <p class="lead">@Model.NumParts Pieces</p>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-6" style="text-decoration:none;">
                <a asp-controller="Home" asp-action="ProductDetails" asp-route-productId="@Model.ProductId" class="btn pill-button w-100">Product Details</a>
            </div>
            <div class="col-6">
                <form asp-page="/Cart" id="@Model.ProductId" method="post" class="mb-auto">
                    <div>
                        <input type="hidden" asp-for="@Model.ProductId">
                        <input type="hidden" name="category" value="@ViewContext.HttpContext.Request.Query["category"]" />
                        <input type="hidden" name="pageNum" value="@ViewContext.HttpContext.Request.Query["pageNum"]" />
                        <button type="submit" class="btn btn-primary pill-button w-100">Add to Cart</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






