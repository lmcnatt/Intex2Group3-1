@model Product

<div class="card m-1 p-1">
    <h4>@Model.Name
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.Price.ToString("c")</small></span>
    </h4>
    <ul>
        <li>Product Type: 
            @foreach (ProductCategory c in Model.ProductCategories)
            {
                @c.Category.CategoryName 
            }
        </li>
        <li>Product Name: @Model.Name</li>
        <li>Product Description: @Model.Description</li>
    </ul>

    <form id="@Model.ProductId" method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.ProductId">
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-success btn-sm float-end">Buy</button>
    </form>
</div>