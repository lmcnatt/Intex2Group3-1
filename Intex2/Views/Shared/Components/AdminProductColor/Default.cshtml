@model IEnumerable<string>

<div class="d-grid gap-2">
    
    @foreach (string c in Model ?? Enumerable.Empty<string>())
    {
        
        <a class="btn @(c == ViewBag.SelectedColor ? "btn-primary" : "btn-outline-secondary")" asp-controller="Admin" asp-action="AdminProducts" asp-route-color="@c" asp-route-pageNum="1" style="width:132px">@c</a>
        
    }
</div>
