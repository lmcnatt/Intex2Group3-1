@model IEnumerable<string>

<div class="d-grid gap-2">
    
    @foreach (string c in Model ?? Enumerable.Empty<string>())
    {
        
            <a class="btn @(c == ViewBag.SelectedColor ? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Products" asp-route-color="@c" asp-route-pageNum="1">@c</a>
        
    }
</div>
