@{
    ViewData["Title"] = "Orders";
}

@model OrdersListViewModel

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Transaction Country</th>
            <th>Date</th>
            <th>DOW</th>
            <th>Time</th>
            <th>Entry Mode</th>
            <th>Amount</th>
            <th>Transaction Type</th>
            <th>Shipping Address</th>
            <th>Bank</th>
            <th>Card Type</th>
            <th>Fraud</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (Order order in Model.Orders)
        {
            <tr>
                <td class="text-left">@order.OrderID</td>
                <td class="text-left">@(order.CustomerId ?? "N/A")</td>
                <td class="text-left">@(order.CountryOfTransaction ?? "N/A")</td>
                <td class="text-left">@(order.Date ?? "N/A")</td>
                <td class="text-left">@(order.DayOfWeek ?? "N/A")</td>
                <td class="text-left">@(order.Time ?? "N/A")</td>
                <td class="text-left">@(order.EntryMode ?? "N/A")</td>
                <td class="text-left">@order.Amount</td>
                <td class="text-left">@(order.TypeOfTransaction ?? "N/A")</td>
                <td class="text-left">@(order.Line1 ?? "N/A"), @(order.Line2 ?? "N/A")<br /> @(order.City ?? "N/A"), @(order.State ?? "N/A") @(order.Zip ?? "N/A")<br />@order.ShippingCountry</td>
                <td class="text-left">@(order.Bank ?? "N/A")</td>
                <td class="text-left">@(order.TypeOfCard ?? "N/A")</td>
                <td class="text-left">@order.Fraud</td>
            </tr>
        }
    </tbody>
</table>

